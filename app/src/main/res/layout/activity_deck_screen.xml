<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/carbon_fiber_background"
    tools:context="com.andrew.softwaredesign.guessagain.DeckScreen"
    android:gravity="center_vertical"
    android:weightSum="100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal"
        android:layout_weight="12.06">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18dp"
            android:text="Logged in as: "
            android:textColor="@color/white"
            android:id="@+id/loggedInText2"
            android:layout_gravity="end"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="User"
            android:layout_marginEnd="40dp"
            android:textColor="@color/white"
            android:id="@+id/userTextId"
            android:layout_below="@+id/loggedInText2"
            android:layout_alignEnd="@+id/loggedInText2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Games Played: "
            android:textSize="18dp"
            android:textColor="@color/white"
            android:id="@+id/gamesText"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="99"
            android:layout_marginStart="40dp"
            android:textColor="@color/white"
            android:id="@+id/userGamesAmount"
            android:layout_below="@+id/gamesText"
            android:layout_alignStart="@+id/gamesText" />
    </RelativeLayout>

    <GridView
        android:id="@+id/gridView"
        android:paddingTop="25dp"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="65.84"
        android:columnWidth="1dp"
        android:horizontalSpacing="1dp"
        android:gravity="center_vertical" />

    <info.hoang8f.widget.FButton
        fbutton:buttonColor="@color/fbutton_color_alizarin"
        fbutton:shadowColor="@color/fbutton_color_pomegranate"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_width="wrap_content"
        android:text="Play"
        android:id="@+id/beginGameButton"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10" />


</LinearLayout>
