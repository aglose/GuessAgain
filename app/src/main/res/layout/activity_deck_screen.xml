<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/carbon_fiber_background"
    tools:context="com.andrew.softwaredesign.guessagain.DeckScreen"
    android:gravity="center_vertical"
    android:weightSum="100">


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10" />

    <GridView
        android:id="@+id/gridView"
        android:paddingTop="55dp"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:columnWidth="1dp"
        android:horizontalSpacing="1dp"
        android:gravity="center_vertical" />

    <info.hoang8f.widget.FButton
        fbutton:buttonColor="@color/fbutton_color_alizarin"
        fbutton:shadowColor="@color/fbutton_color_pomegranate"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_width="wrap_content"
        android:text="Play"
        android:id="@+id/beginGameButton"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10" />


</LinearLayout>
