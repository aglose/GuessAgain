<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2BC68B" />
            <gradient  android:angle="-90"  android:startColor="#05A25E" android:endColor="#08D78E"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2BC68B" />
            <solid  android:color="#1EE196"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2BC68B" />
            <gradient  android:angle="-90"  android:startColor="#52FFC3" android:endColor="#05A25E" />
        </shape>
    </item>
</selector>