<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/carbon_fiber_background"
    tools:context="com.andrew.softwaredesign.guessagain.DeckScreen"
    android:gravity="center_vertical">


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.16"
        android:layout_gravity="center_horizontal" />

    <GridView
        android:id="@+id/gridView"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:columnWidth="20dp"

        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:gravity="center_vertical" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_gravity="center_horizontal" />

    <info.hoang8f.widget.FButton
        fbutton:buttonColor="@color/fbutton_color_pomegranate"
        fbutton:shadowColor="@color/fbutton_color_alizarin"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_width="wrap_content"
        android:text="Play"
        android:id="@+id/beginGameButton"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>
